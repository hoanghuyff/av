-- Core Services
local Players = game:GetService('Players')
local Client = Players.LocalPlayer

-- Thời gian chờ giữa mỗi lần gửi yêu cầu
local SendDelay = 2

-- Hàm gửi yêu cầu kết bạn
local function AutoAddFriends()
    while true do
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= Client then
                -- Gửi yêu cầu kết bạn
                pcall(function()
                    Client:RequestFriendship(player)
                    print("✅ Đã gửi yêu cầu kết bạn tới:", player.Name)
                end)
            end
            task.wait(SendDelay) -- Chờ giữa mỗi lần gửi
        end
        task.wait(300) -- Chờ trước khi quét lại danh sách người chơi
    end
end

-- Khởi động tính năng tự động kết bạn
task.spawn(AutoAddFriends)

print("🚀 Auto Add Friend đã khởi động!")
