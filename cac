-- Core Services
local Players = game:GetService('Players')
local Client = Players.LocalPlayer

-- Config
local Config = {
    SendDelay = 2,       -- Thá»i gian chá» giá»¯a má»—i láº§n gá»­i yÃªu cáº§u (giÃ¢y)
    MaxRequests = 10,    -- Giá»›i háº¡n sá»‘ lÆ°á»£ng yÃªu cáº§u gá»­i trong má»™t phiÃªn
}

-- Biáº¿n lÆ°u tráº¡ng thÃ¡i
local SentList = {}      -- Danh sÃ¡ch ngÆ°á»i Ä‘Ã£ gá»­i yÃªu cáº§u
local RequestCount = 0   -- Sá»‘ lÆ°á»£ng yÃªu cáº§u Ä‘Ã£ gá»­i

-- HÃ m gá»­i yÃªu cáº§u káº¿t báº¡n
local function SafeSendRequest(player)
    if RequestCount >= Config.MaxRequests then return end -- Äáº¡t giá»›i háº¡n yÃªu cáº§u
    if player == Client or SentList[player.UserId] then return end -- KhÃ´ng gá»­i trÃ¹ng láº·p

    local success = pcall(function()
        Client:RequestFriendship(player)
    end)

    if success then
        SentList[player.UserId] = true
        RequestCount = RequestCount + 1
        print("âœ… ÄÃ£ gá»­i yÃªu cáº§u káº¿t báº¡n tá»›i:", player.Name)
    else
        warn("âš ï¸ KhÃ´ng thá»ƒ gá»­i yÃªu cáº§u tá»›i:", player.Name)
    end
end

-- Main loop Ä‘á»ƒ tá»± Ä‘á»™ng gá»­i yÃªu cáº§u
local function AutoFriendLoop()
    while true do
        for _, player in ipairs(Players:GetPlayers()) do
            SafeSendRequest(player)
            task.wait(Config.SendDelay) -- Chá» trÆ°á»›c khi gá»­i yÃªu cáº§u tiáº¿p theo
        end
        task.wait(300) -- Chá» má»™t khoáº£ng thá»i gian giá»¯a cÃ¡c vÃ²ng quÃ©t
    end
end

-- Khá»Ÿi cháº¡y Auto Friend
task.spawn(AutoFriendLoop)

-- Xá»­ lÃ½ ngÆ°á»i chÆ¡i má»›i vÃ o game
Players.PlayerAdded:Connect(function(player)
    task.wait(3) -- Äá»£i Ä‘á»ƒ Ä‘áº£m báº£o ngÆ°á»i chÆ¡i Ä‘Ã£ táº£i Ä‘áº§y Ä‘á»§
    SafeSendRequest(player)
end)

print("ğŸš€ Auto Add Friend Ä‘Ã£ khá»Ÿi Ä‘á»™ng thÃ nh cÃ´ng!")
