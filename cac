-- Core Services
local Players = game:GetService("Players")
local Client = Players.LocalPlayer

-- Thá»i gian chá» giá»¯a cÃ¡c láº§n gá»­i yÃªu cáº§u
local SendDelay = 2

-- HÃ m tá»± Ä‘á»™ng gá»­i yÃªu cáº§u káº¿t báº¡n
local function AutoAddFriends()
    while true do
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= Client then -- Chá»‰ gá»­i yÃªu cáº§u Ä‘áº¿n ngÆ°á»i khÃ¡c
                local success, err = pcall(function()
                    Client:RequestFriendship(player)
                end)
                if success then
                    print("âœ… ÄÃ£ gá»­i yÃªu cáº§u káº¿t báº¡n tá»›i:", player.Name)
                else
                    warn("âš ï¸ Lá»—i khi gá»­i yÃªu cáº§u Ä‘áº¿n:", player.Name, err)
                end
            end
            task.wait(SendDelay) -- Chá» giá»¯a cÃ¡c láº§n gá»­i yÃªu cáº§u
        end
        task.wait(300) -- Chá» trÆ°á»›c khi quÃ©t láº¡i danh sÃ¡ch ngÆ°á»i chÆ¡i
    end
end

-- Báº¯t Ä‘áº§u cháº¡y tÃ­nh nÄƒng tá»± Ä‘á»™ng gá»­i yÃªu cáº§u káº¿t báº¡n
task.spawn(AutoAddFriends)

print("ğŸš€ Auto Friend Request Ä‘Ã£ khá»Ÿi Ä‘á»™ng thÃ nh cÃ´ng!")
