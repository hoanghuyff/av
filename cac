-- Core Services
local Players = game:GetService('Players')
local Client = Players.LocalPlayer

-- Thá»i gian chá» giá»¯a má»—i láº§n gá»­i yÃªu cáº§u
local SendDelay = 2

-- HÃ m gá»­i yÃªu cáº§u káº¿t báº¡n
local function AutoAddFriends()
    while true do
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= Client then
                -- Gá»­i yÃªu cáº§u káº¿t báº¡n
                pcall(function()
                    Client:RequestFriendship(player)
                    print("âœ… ÄÃ£ gá»­i yÃªu cáº§u káº¿t báº¡n tá»›i:", player.Name)
                end)
            end
            task.wait(SendDelay) -- Chá» giá»¯a má»—i láº§n gá»­i
        end
        task.wait(300) -- Chá» trÆ°á»›c khi quÃ©t láº¡i danh sÃ¡ch ngÆ°á»i chÆ¡i
    end
end

-- Khá»Ÿi Ä‘á»™ng tÃ­nh nÄƒng tá»± Ä‘á»™ng káº¿t báº¡n
task.spawn(AutoAddFriends)

print("ğŸš€ Auto Add Friend Ä‘Ã£ khá»Ÿi Ä‘á»™ng!")
